<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    android:orientation="vertical"
    android:padding="15dp">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="8dp"
        android:text="Â¿Desea borrar el audio?"
        android:textAlignment="center"
        android:textColor="?attr/colorAccent"
        android:textSize="20dp"
        android:textStyle="bold"
         />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="70dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="70dp"
        android:background="@drawable/ic_clear_black_24dp"
        android:foregroundGravity="center" />

    <Button
        android:id="@+id/btn_borr_volv"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/shapealert"
        android:layoutDirection="inherit"
        android:shadowColor="@android:color/transparent"
        android:text="Volver"
        android:textAlignment="center"
        android:textColor="?attr/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_borr_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/shapedelete"
        android:padding="15dp"
        android:shadowColor="?attr/textColor"
        android:text="Borrar"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</RelativeLayout>